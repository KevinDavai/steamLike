{% extends 'base.html.twig' %}

{% block body %}

<style>
.products-trending {
    position: relative;
    font-size: 0;
    text-align: center;
    margin: 0 -10px 30px;
}
.item {
    width: calc(20% - 20px);
    display: inline-block;
    margin: 0 10px 20px;
    position: relative;
    border-radius: 8px;
    vertical-align: top;
}
.item .cover {
    position: relative;
    display: inline-block;
    transition: .1s;
    width: 100%;
}
.badge.steam {
    background-color: #000;
    background-position: -7px -5px;
}
.item .badge {
    position: absolute;
    top: 5px;
    right: 5px;
    z-index: 1;
}
.badge {
    width: 31px;
    height: 31px;
    border-radius: 100%;
    background-image: url(/themes/igv1/images/platform-icons17.png);
    background-repeat: no-repeat;
    background-size: 35px;
    flex: none;
}
.item .cover img {
    width: 100%;
    border-radius: 8px;
}
.ig-sections-main-content, .mainshadow {
    box-shadow: 0 0 8px 0 rgb(0 0 0 / 10%);
}
img {
    border: 0;
}
.item .shadow {
    position: absolute;
    width: 100%;
    bottom: 0;
    height: 80px;
    box-shadow: inset 0 -60px 30px -30px rgb(0 0 0 / 40%);
    border-radius: 8px;
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
}

.item .discount {
    background-color: #ff5400;
    padding: 5px 7px;
    font-size: 16px;
    color: #fff;
    bottom: -3px;
    left: -3px;
    position: absolute;
    font-weight: 700;
    border-radius: 5px;
}
.item .price {
    color: #fff;
    bottom: 3px;
    right: 9px;
    position: relative;
    font-size: 19px;
    font-weight: 700;
    text-shadow: 0 0 4px #000;
    margin-left: auto;
}

.item .cover {
    position: relative;
    display: inline-block;
    transition: .1s;
    width: 100%;
}
a, a:hover {
    text-decoration: none;
}
a {
    color: #f50;
}

.item .name {
    color: #777;
    font-size: 13px;
    margin-top: 15px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
}
.badge.steam {
    background-color: #000;
    background-position: -7px -5px;
}
.item .badge {
    position: absolute;
    top: 5px;
    right: 5px;
    z-index: 1;
}
.badge {
    width: 31px;
    height: 31px;
    border-radius: 100%;
    background-image: url(/themes/igv1/images/platform-icons17.png);
    background-repeat: no-repeat;
    background-size: 35px;
    flex: none;
}
.item .cover img {
    width: 100%;
    border-radius: 8px;
}
.ig-sections-main-content, .mainshadow {
    box-shadow: 0 0 8px 0 rgb(0 0 0 / 10%);
}
img {
    border: 0;
}
.item .cover img.dlc {
    top: 0;
    left: 0;
    position: absolute;
    width: 30%;
    border-radius: 8px 0 0 0;
}

.flexlol {
    display: flex;
    align-items: flex-start;
}

.filter {
        position: absolute;
    left: 15em;
}

</style>
	<h1 class="pb-5 pt-2">Magasin de StimLike</h1>
<div class="flexlol">
<div class="filter">
<p>Filtrer</p>
<form id="filters">
{% for category in category %}
<p><input type="checkbox" name="category[]" id="cat{{category.id}}" value="{{category.id}}">
<label for="cat{{category.id}}">{{category.name}}</label></p>
{% endfor %}
</div>

<div class="container" id="content">
{% include "steam/_content.html.twig" %}
</div>

<script>
    const Filterform = document.querySelector("#filters");

    document.querySelectorAll("#filters input").forEach(input => {
        input.addEventListener("change", () => {
            const Form = new FormData(Filterform);

            const Params = new URLSearchParams();

            Form.forEach((value, key) => {
                Params.append(key, value);
                console.log(Params.toString());
            })

            const Url = new URL(window.location.href);
            
            fetch(Url.pathname + "?" + Params.toString() + "&ajax=1", {
                headers: {
                    "x-Requested-With": "XMLHttpRequest"
                }
            }).then(response => 
                response.json()
            ).then(data => {
                const content = document.querySelector("#content");
                content.innerHTML = data.content;
            }).catch(e => alert(e));
        })
    });

</script>

{% endblock %}
